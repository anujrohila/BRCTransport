@model BRCTransport.Domain.tblMRNoteDTO
@using Telerik.Web.Mvc.UI
@{
    
}
<div id="hiddenValues">
    @Html.Hidden("ActiveMenuName", "MRNote")
</div>
<link href="~/Content/Styles/CommonStyle.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MRId)
    @Html.HiddenFor(model => model.BillId)
    <section class="title">
    </section>
    <section id="about-us" class="container ContentBackground">
        <div class="row-fluid">
            <div class="span12">
                <label class="PageTitleHeading">Save MRNote</label>
            </div>
            <div class="span12">
                @Html.ValidationSummary()
            </div>
        </div>
        <div class="row-fluid">
            <table style="width: 700px">
                <tr>
                    <td style="width: 100px">Date:</td>
                    <td style="width: 100px">
                        @(Html.Telerik().DatePickerFor(m => m.MRDate).InputHtmlAttributes(new { @class = "input-block-level" }))
                    </td>
                    <td style="width: 100px">&nbsp;</td>
                    <td style="width: 100px">&nbsp;</td>
                </tr>
                <tr>
                    <td>MRNo</td>
                    <td>
                        @Html.TextBoxFor(model => model.MrNo, null, new { @class = "input-block-level" })
                    </td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>Recieved From</td>
                    <td colspan="3">
                        @Html.TextBoxFor(model => model.RecievedFrom, null, new { @class = "input-block-level" })
                    </td>
                </tr>
                <tr>
                    <td>From</td>
                    <td>
                        @Html.TextBoxFor(model => model.LocationFrom, null, new { @class = "input-block-level" })</td>
                    <td style="padding-left: 10px">To</td>
                    <td>
                        @Html.TextBoxFor(model => model.LocationTo, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td>BillNo</td>
                    <td>
                        @Html.TextBoxFor(model => model.BillNo, null, new { @class = "input-block-level", @onBlur = "OnBillBlur();" })</td>
                    <td style="padding-left: 10px">Bill Date</td>
                    <td>
                        @Html.TextBoxFor(model => model.BillDate, null, new { @class = "input-block-level", @readonly = "readonly" })</td>
                </tr>
                <tr>
                    <td>Bill Amount</td>
                    <td>
                        @Html.TextBoxFor(model => model.BillAmount, null, new { @class = "input-block-level", @readonly = "readonly" })</td>
                    <td style="padding-left: 10px">NoofPackage</td>
                    <td>
                        @Html.TextBoxFor(model => model.NoofPackages, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td>Weight</td>
                    <td>
                        @Html.TextBoxFor(model => model.Weight, null, new { @class = "input-block-level" })</td>
                    <td style="padding-left: 10px">Recieved Amount</td>
                    <td>
                        @Html.TextBoxFor(model => model.AmountRecieved, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td>PaymentType</td>
                    <td colspan="3">
                        @Html.DropDownListFor(m => m.WayOfRecieve, Model.PaymentType, "Select")</td>
                </tr>
                <tr>
                    <td>Fright</td>
                    <td colspan="3">
                        @Html.TextBoxFor(model => model.Fright, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td>St Ch.</td>
                    <td colspan="3">
                        @Html.TextBoxFor(model => model.StCharges, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td class="auto-style1">Hamali</td>
                    <td class="auto-style1" colspan="3">
                        @Html.TextBoxFor(model => model.Hamali, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td class="auto-style1">Other1</td>
                    <td class="auto-style1" colspan="3">
                        @Html.TextBoxFor(model => model.Other1, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td class="auto-style1">Other2</td>
                    <td class="auto-style1" colspan="3">
                        @Html.TextBoxFor(model => model.Other2, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td class="auto-style1">Other3</td>
                    <td class="auto-style1" colspan="3">
                        @Html.TextBoxFor(model => model.Other3, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td class="auto-style1">Other4</td>
                    <td class="auto-style1" colspan="3">
                        @Html.TextBoxFor(model => model.Other4, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td class="auto-style1">Total</td>
                    <td class="auto-style1" colspan="3">
                        @Html.TextBoxFor(model => model.TotalAmount, null, new { @class = "input-block-level" })</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" class="btn btn-info" onclick="OnSaveCancelButton('MRNote','Index')">Cancel</button>
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
    </section>
}
<script src="~/Content/Scripts/MRNote.js"></script>
